<%= form_for(@task) do |t| %>

	<% if @task.errors.any? %>
		<div class="alert alert-error">
			<ul>
				<% @task.errors.full_messages.each do |task| %>
					<li><%= task %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<%= t.label :day %>
	<%= t.text_field :day, class: "medium_field" %>

	<%= t.label :room %>
	<%= t.text_field :room, class: "medium_field" %>

	<%= t.label :begin %>
	<%= t.text_field :begin, class: "medium_field"  %>

	<%= t.label :end %>
	<%= t.text_field :end, class: "medium_field"  %>

	<%= t.label :gear %>
	<%= t.text_field :gear, class: "medium_field"  %>

	<%= t.label :preset %>
	<%= t.text_field :preset, class: "medium_field"  %>

	<%= t.label :notes %>
	<%= t.text_field :notes, class: "medium_field"  %>

	<%= t.submit "Create task", class: "btn btn-large btn-primary" %>
<% end %>